{
	"name"          : "unoshell",
	"description"   : "Panel, Dock. Useable, beauty, fast!",
	"authors"       : [ "Vital Fadeev" ],
	"license"       : "proprietary",
	"copyright"     : "Copyright Â© 2020, Vital Fadeev",
    "targetType"    : "none",
	"targetPath"	: "bin",
	"dependencies": 
    {
		"unoshell:uno"      	 : "*",
		"unoshell:unopanel" 	 : "*",
		"unoshell:unohotkeys" 	 : "*"
	},
	"subPackages": 
	[
		"uno/",
		"unopanel/",
		"unohotkeys/"
